<div class="wrapper">
  <div class="container">
    <h1 class="text-center">Edit <%= resource_name.to_s.humanize %></h1>
  </br>
</br>


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">

  <h2> General Information </h2>
  
  <div class="profile-identifiers">
    <%= f.input :email, required: true, autofocus: true %>
    <% if current_user.role == 'influencer' %>
    <% if current_user.role == 'influencer' && current_user.media_type == 'instagram' %>
    <%= f.input :instagram_identifier, required: false, autofocus: true, input_html: { class: 'detailStyling_user'}, label_html: { class: 'detailLabelStyling'} %>
    <% else %>
    <%= f.label :youtube_identifier, 'Your Youtube Identifier' %>
    <%= f.input :youtube_identifier, required: false, autofocus: true, label:false, input_html: { class: 'detailStyling_user'}, label_html: { class: 'detailLabelStyling'} %>
    <% end %>
  </br>
</br>

<hr>

<h2> Pricing for your services</h2>
<% if current_user.role == 'influencer' && current_user.media_type == 'instagram' %>

<%= f.label :instagram_post_price, 'Instagram Post Price' %>
<%= f.input :instagram_post_price, required: false, label:false, autofocus: true, input_html: { class: 'detailStyling_user'}, label_html: { class: 'detailLabelStyling'} %>
<%= f.label :instagram_story_price, 'Instagram Story Price (EUR)' %>
<%= f.input :instagram_story_price,  required: false, label: false, autofocus: true, input_html: { class: 'detailStyling_user'}, label_html: { class: 'detailLabelStyling'} %>
<% else %>
<%= f.label :youtube_vid_price, 'Youtube Video Price (EUR)' %>
<%= f.input :youtube_vid_price, required: false, autofocus: true, label: false, input_html: { class: 'detailStyling_user'}, label_html: { class: 'detailLabelStyling'} %>
<%= f.label :youtube_ref_price, 'Youtube Reference Price (EUR)' %>
<%= f.input :youtube_ref_price, required: false, autofocus: true, label: false, input_html: { class: 'detailStyling_user'}, label_html: { class: 'detailLabelStyling'} %>
<% end %>
</div>
<% end %>
</br>
</br>


<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
<p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
<% end %>
<h2> Password Manipulation</h2>
<%= f.input :current_password,
hint: "We need your current password to confirm your changes",
required: true,
input_html: { autocomplete: "current-password" } %>
<%= f.input :password,
hint: "Leave it blank if you don't want to change it",
required: false,
input_html: { autocomplete: "new-password" } %>
<%= f.input :password_confirmation,
required: false,
input_html: { autocomplete: "new-password" } %>
</div>


<div class="form-actions">
  <%= f.button :submit, "Update", class: 'btn btn-primary' %>
</div>
<% end %>
</br>



<h3>Cancel my account</h3>

<p>Unhappy?</p>
<%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %>
</br>
</br>

<%= link_to "Back", :back, class: 'btn btn-primary' %>
</div>
</div>
</div>
