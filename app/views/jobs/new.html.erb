<script>

// Counter for Instagram

function decrease() {
  let val = document.querySelector(".insta_stories");
  if(parseInt(val.value) > parseInt(val.min)) {
    val.value = parseInt(val.value) - 1;
  }
  return val;
}
function increase() {
  let val = document.querySelector(".insta_stories");
