<div class="container-job">
  <div class="row">
    <div class="job-header">
      <h1 class="text-center"> Proposal for <%= @influencer.first_name %></h1></br></br>
    </div>
      <!-- 
        Instagram divs  -->
        <% if @influencer.media_type == "instagram" %>
        <%= simple_form_for @job ,:url => {:action => :create, :controller => :jobs} do |f| %>
        <label for="formGroupExampleInput">Instagram Stories</label>
        <div class="form-actions">
          <i class="fas fa-minus" onclick="decrease()"></i>
          <input name="influencer_job[instagram_story]" type="number" min="0" max="99" value="1" class="insta_stories" id="number" readonly>
          <i class="fas fa-plus" onclick="increase()"></i>

        </div>
        <label for="formGroupExampleInput">Instagram Posts</label></br>
        <div class="form-actions">
          <i class="fas fa-minus" onclick="decrease2()"></i>
          <input name="influencer_job[instagram_post]" type="number" min="0" max="99" value="1" class="insta_posts" id="number" readonly>
          <i class="fas fa-plus" onclick="increase2()"></i>
        </br>
      </br>

      <div class="form-group">
        <label for="exampleFormControlTextarea1">Job Description</label>
        <textarea class="form-control" name="influencer_job[description]" rows="3"></textarea>
      </div>
    </br>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">Price </span>
      </div>
      <input type="text" class="form-control" name="influencer_job[price]" readonly >
      <div class="input-group-append">
      </br>
      <span class="input-group-text"></span>
    </div>
  </div>
</br>
</br>
<button class="button-propose" type="submit"> Submit your Proposal</button>

</div>
</div>
<% end %>
<% end %>
